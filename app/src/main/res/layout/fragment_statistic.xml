<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".statistic.StatisticFragment">



    <TextView
        android:id="@+id/statistics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="So far "
        android:textSize="25dp"
        android:textStyle="bold"

        android:layout_marginStart="30dp"
        android:layout_marginTop="80dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <TextView
        android:id="@+id/followersByApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Followers: 360"
        android:textSize="20dp"

        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="@+id/statistics"
        app:layout_constraintTop_toBottomOf="@+id/statistics" />



    <TextView
        android:id="@+id/followersPercentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Followers percentage: 60"
        android:textSize="20dp"

        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/followersByApp" />


    <View
        android:id="@+id/firstDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"

        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/followersPercentage" />

    <TextView
        android:id="@+id/followingByApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Total followed: 12000"
        android:textSize="20dp"

        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstDivider" />


    <TextView
        android:id="@+id/unfollowedByApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Total unfollowed: 11500"
        android:textSize="20dp"

        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/followingByApp" />


    <View
        android:id="@+id/secondDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"

        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/unfollowedByApp" />

    <TextView
        android:id="@+id/likes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Total likes: 256"
        android:textSize="20dp"

        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secondDivider" />


    <TextView
        android:id="@+id/comments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Total comments: 23"
        android:textSize="20dp"

        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/likes" />


    <TextView
        android:id="@+id/messages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Total messages: 16"
        android:textSize="20dp"

        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/comments" />


</androidx.constraintlayout.widget.ConstraintLayout>